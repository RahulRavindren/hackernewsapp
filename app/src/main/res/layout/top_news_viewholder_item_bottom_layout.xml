<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/bottom_container"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="8dp"
                                                   app:layout_constraintLeft_toLeftOf="@+id/card_padding_left"
                                                   app:layout_constraintTop_toBottomOf="@+id/top_news_header"
                                                   app:layout_constraintRight_toRightOf="@+id/card_padding_right"
                                                   app:layout_constraintBottom_toBottomOf="parent">
    <TextView
            android:id="@+id/author_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="122 points  by yolo"
            android:includeFontPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:id="@+id/comment_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16 comments"
            android:includeFontPadding="false"
            android:paddingLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/author_details"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|right"
            android:text="24 hours ago"
            android:includeFontPadding="false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>