<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="?listPreferredItemHeight">
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/card_padding_left"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="10dp"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/card_padding_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="10dp"/>

    <TextView
            android:id="@+id/top_news_header"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/card_padding_left"
            app:layout_constraintRight_toRightOf="@+id/card_padding_right"
            app:layout_constraintTop_toTopOf="parent"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toTopOf="@+id/bottom_container"/>

    <include layout="@layout/top_news_viewholder_item_bottom_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>